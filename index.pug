doctype
-
	var converters = [
		'Text (UTF-8)',
		'Hex',
		'Binary',
		'Base64',
		'ROT13',
		'ROT47',
		'MD5',
		'SHA-1',
		'Unicode',
		'punycode',
		'IDNA (UTS #46)',
		'URL Escape',
		'JS Escape',
		'HTML Escape',
		'Quoted-Printable',
		'Sclipting',
		'Ascii85 (PostScript)',
		'uuencode',
		'NFC',
		'NFKC',
	];
	
	var js = function (file) {
		if (debug) {
			return file + '.js';
		} else {
			return file + '.min.js';
		}
	}
	
	var css = function (file) {
		if (debug) {
			return file + '.css';
		} else {
			return file + '.min.css';
		}
	}
html(lang = 'en')
	head
		meta(charset = 'utf-8')
		title Sugoi Converter
		script(src = js('index'), charset = 'utf-8')
		link(rel = 'stylesheet', href = css('index'))
		link(rel = 'stylesheet', href = 'https://fonts.googleapis.com/css?family=Ubuntu+Mono|Squada+One')
		meta(name = 'viewport', content = 'width=device-width, initial-scale=1')
	body
		a.fork-me(href = 'https://github.com/hakatashi/sugoi-converter', target = '_blank')
		h1
			span.title Sugoi Converter
			= " "
			small.version= pkg.version
			= " "
			small.author
				a(href = 'https://github.com/hakatashi', target = '_blank') by @hakatashi
		.converters.pure-g.pure-form
			each converter in converters
				- var slug = converter.replace(/\(.+?\)/g, '').replace(/\W/g, '').toLowerCase();
				.converter.pure-u-1.pure-u-sm-1-3.pure-u-md-1-4.pure-u-lg-1-5.pure-u-xl-1-6(class=slug)
					h2.label= converter
					textarea.textarea(data-converter=slug)
					p.error
